<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
>
    <g:DockLayoutPanel unit="EM" g:width="300px" g:height="300px">
        <g:north size="2">
            <g:RichTextArea ui:field="idField" title="id"/>
        </g:north>
        <g:north size="2">
            <g:RichTextArea ui:field="nameField" title="name"/>
        </g:north>
        <g:south size="2">
            <g:DockLayoutPanel unit="EM">
                <g:east size="5">
                    <g:PushButton ui:field="okBtn">OK</g:PushButton>
                </g:east>
                <g:east size="5">
                    <g:PushButton ui:field="cancelBtn">Cancel</g:PushButton>
                </g:east>
            </g:DockLayoutPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>